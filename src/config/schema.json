{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "configurations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "channel": {
            "type": "string",
            "minLength": 1,
            "description": "The name of the channel"
          },
          "includeLive": {
            "type": "boolean",
            "default": false,
            "description": "Indicates whether live content should be included"
          }
        },
        "required": ["channel"],
        "additionalProperties": false
      },
      "description": "An array of configuration objects"
    }
  },
  "required": ["configurations"],
  "additionalProperties": false
}
